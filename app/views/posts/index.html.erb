<h1>Index</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <% if user_signed_in? %>
          <% if post.user_id == current_user.id %>
            <td><%= link_to 'Edit', edit_post_path(post), class: "btn"  %></td>
            <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %></td>
          <% end %>    
        <% end %>
      </tr>
    <% end %>
  </tbody>
  <%= paginate @posts %>
</table>

<br>

<%= link_to 'New Post', new_post_path, class: "btn" %>